<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.angela.pebbletracker.MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/press_a_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="2. Press a button on Pebble"
            android:textColor="#AAAAAA"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/which_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/press_a_button"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="None yet"
            android:textColor="#AAAAAA"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/trigger_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/which_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="3. Trigger a vibration"
            android:textColor="#AAAAAA"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_vibrate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trigger_vibrate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="VIBRATE"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</LinearLayout>